<style type="text/css"> .centerDiv { width: 17%; height:100px; margin: 0 auto;  text-align: center;} </style>

<div class="tab-pane active" id="#upload">
  <div class="container">
    <!-- Default panel contents -->
    <h4><span class="glyphicon glyphicon-upload"></span> Upload new samples:</h4>
      <div class="container">
      <%= form_tag @sample, html: {action: :upload_malz}, multipart: true do %>
          <%= file_field_tag 'malz' %>
        <h5><span class="glyphicon glyphicon-compressed"></span> Compressed?</h5>
        <div class="row">
          <div class="col-lg-6">
            <div class="input-group">
          <span class="input-group-addon">
            <%= check_box_tag(:box) %>
            <%= label_tag(:box, "Unzip") %>
         </span>
              <%= text_field(:passwd, :box, :class => "form-control", :placeholder => "password (if encrypted)") %>
              <!--<input type="text" class="form-control" placeholder="password (if encrypted)">-->
            </div><!-- /.col-lg-6 -->
          </div>
          <%= submit_tag("Upload", class: "btn btn-primary")%>
    <% end %>
        </div>
    </div>
  </div>
</div>
