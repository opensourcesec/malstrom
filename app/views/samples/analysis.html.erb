<h3>File: <%= @sample.malz_file_name %></h3>

 <div class="col-xs-7" style="float">
  <div class="panel panel-info">
    <!-- Default panel contents -->
    <div class="panel-heading">Details</div>
    <!-- List group -->
    <ul class="list-group">
      <li class="list-group-item">Type: <%= @type %></li>
      <li class="list-group-item">Size: <%= @sample.malz_file_size %></li>
      <li class="list-group-item">MD5: <%= @sample.md5sum %></li>
      <li class="list-group-item">SHA1: <%= @sample.sha1sum %></li>
      <li class="list-group-item">SHA256: <%= @sample.sha256 %></li>
    </ul>
  </div>
   <div class="panel panel-default">
     <div class="panel-heading">
       <h3 class="panel-title">Analysis</h3>
     </div>
     <div class="panel-body">
       <div class="well well-lg" style="float">
         <%= @sample.deepdive %>
       </div>
     </div>
   </div>
 </div>

  <div class="col-xs-2" style="float">
    <div class="panel panel-danger">
      <div class="panel-body">
        <h5>
          Virustotal Detection:  <%= link_to @sample.detection, "http://virustotal.com/en/file/#{@sample.sha256}/analysis", :target => "_blank", :class => "label label-danger" %>
        </h5>
      </div>
    </div>
  </div>

<div class="col-xs-4" style="float">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Notes</h3>
    </div>
    <div class="panel-body">
      <%= form_tag("add_note", method: "post") do %>
          <%= label_tag(:add_note, '') %>
          <div>
            <%= text_area_tag(:note_content, "#{@sample.notes}", size: "52x15") %>
            <%= hidden_field_tag(:sample_id, @sample.id) %>
          </div>
          <div>
            <%= submit_tag("Save", class: "btn btn-primary") %>
          </div>
          <% end %>
    </div>
  </div>
</div>